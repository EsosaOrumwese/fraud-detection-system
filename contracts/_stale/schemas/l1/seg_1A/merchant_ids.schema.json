{
  "$schema": "https://json-schema.org/draft/2019-09/schema",
  "$id": "contracts/schemas/l1/seg_1A/merchant_ids.schema.json",
  "title": "Layer 1 Segment 1A â€“ Merchant IDs",
  "description": "Normalized merchant ingress records consumed by the S0 foundations stage.",
  "type": "array",
  "items": {
    "type": "object",
    "additionalProperties": false,
    "required": [
      "merchant_id",
      "mcc",
      "channel",
      "home_country_iso"
    ],
    "properties": {
      "merchant_id": {
        "type": "integer",
        "minimum": 1
      },
      "mcc": {
        "type": "integer",
        "minimum": 0,
        "maximum": 9999
      },
      "channel": {
        "type": "string",
        "enum": [
          "card_present",
          "card_not_present"
        ]
      },
      "home_country_iso": {
        "type": "string",
        "pattern": "^[A-Z]{2}$"
      },
      "settlement_currency": {
        "anyOf": [
          {
            "type": "string",
            "pattern": "^[A-Z]{3}$"
          },
          {
            "type": "null"
          }
        ],
        "description": "Optional ISO-4217 settlement currency code for the merchant."
      },
      "settlement_currency_vector": {
        "anyOf": [
          {
            "type": "object",
            "additionalProperties": {
              "type": "number"
            }
          },
          {
            "type": "string",
            "description": "JSON-encoded currency share vector (currency -> weight)."
          },
          {
            "type": "null"
          }
        ],
        "description": "Optional share vector over settlement currencies used when a merchant settles in multiple currencies."
      }
    }
  }
}


{
  "$schema": "https://json-schema.org/draft/2019-09/schema",
  "$id": "contracts/schemas/l1/seg_1A/iso_legal_tender.schema.json",
  "title": "Layer 1 Segment 1A - ISO Legal Tender 2024",
  "description": "Canonical mapping from ISO-3166 alpha-2 country codes to their primary ISO-4217 legal tender.",
  "type": "array",
  "items": {
    "type": "object",
    "additionalProperties": false,
    "required": [
      "country_iso",
      "primary_ccy"
    ],
    "properties": {
      "country_iso": {
        "type": "string",
        "pattern": "^[A-Z]{2}$"
      },
      "primary_ccy": {
        "type": "string",
        "pattern": "^[A-Z]{3}$"
      }
    }
  }
}

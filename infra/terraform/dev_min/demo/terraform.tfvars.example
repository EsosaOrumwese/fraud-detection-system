aws_region   = "eu-west-2"
name_prefix  = "fraud-platform-dev-min"
project      = "fraud-platform"
environment  = "dev_min"
owner        = "esosa"
expires_at   = ""

demo_run_id          = "manual"
evidence_bucket_name = "fraud-platform-dev-min-evidence"
demo_log_retention_days = 7
cloudwatch_log_group_prefix = "/fraud-platform/dev_min"
vpc_cidr = "10.42.0.0/16"
public_subnet_cidrs = ["10.42.0.0/24", "10.42.1.0/24"]
ecs_cluster_name = "fraud-platform-dev-min"
ecs_probe_container_image = "public.ecr.aws/docker/library/busybox:1.36"
ecs_daemon_container_image = ""
ecs_daemon_task_cpu = "256"
ecs_daemon_task_memory = "512"
required_platform_run_id_env_key = "REQUIRED_PLATFORM_RUN_ID"
required_platform_run_id = "platform_YYYYMMDDTHHMMSSZ"

confluent_credentials_source = "remote_state"
confluent_state_bucket = "fraud-platform-dev-min-tfstate"
confluent_state_key = "dev_min/confluent/terraform.tfstate"
confluent_state_region = "eu-west-2"

confluent_env_name = "dev_min"
confluent_cluster_name = "dev-min-kafka"
confluent_cluster_type = "Basic"
confluent_cluster_cloud = "AWS"
confluent_cluster_region = "eu-west-2"

kafka_topics = [
  "fp.bus.control.v1",
  "fp.bus.traffic.fraud.v1",
  "fp.bus.context.arrival_events.v1",
  "fp.bus.context.arrival_entities.v1",
  "fp.bus.context.flow_anchor.fraud.v1",
  "fp.bus.rtdl.v1",
  "fp.bus.audit.v1",
  "fp.bus.case.triggers.v1",
  "fp.bus.labels.events.v1",
]

# Manual fallback values used only if confluent_credentials_source = "manual".
confluent_bootstrap = "REPLACE_ME_BOOTSTRAP"
confluent_api_key = "REPLACE_ME_API_KEY"
confluent_api_secret = "REPLACE_ME_API_SECRET"
ssm_confluent_bootstrap_path = "/fraud-platform/dev_min/confluent/bootstrap"
ssm_confluent_api_key_path = "/fraud-platform/dev_min/confluent/api_key"
ssm_confluent_api_secret_path = "/fraud-platform/dev_min/confluent/api_secret"

ig_api_key = "REPLACE_ME_IG_API_KEY"
ssm_ig_api_key_path = "/fraud-platform/dev_min/ig/api_key"

rds_instance_id = "fraud-platform-dev-min-db"
db_name = "fraud_platform"
db_username = "fp_app"
db_password = ""
db_engine_version = "16.12"
db_instance_class = "db.t4g.micro"
db_allocated_storage = 20
db_max_allocated_storage = 50
db_port = 5432
db_publicly_accessible = true
ssm_db_user_path = "/fraud-platform/dev_min/db/user"
ssm_db_password_path = "/fraud-platform/dev_min/db/password"
ssm_db_dsn_path = "/fraud-platform/dev_min/db/dsn"
write_db_dsn_parameter = false
